<Page x:Class="View.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:View"
      mc:Ignorable="d"
      Title="StartPage" Height="450" Width="800">
      <StackPanel VerticalAlignment="Top" 
                  HorizontalAlignment="Center"
                  Margin="0, 50, 0,0">
          <TextBlock Text="Банкомат BankWise" 
                     FontSize="30" 
                     TextAlignment="Center"/>
          <Button Content="Снять деньги" 
                  Click="OnGiveMoneyClick" 
                  Width="260" 
                  Height="30" 
                  FontSize="15" 
                  Margin="5, 30, 5,5"/>
          <Button Content="Положить деньги" 
                  Click="OnReceiveMoneyClick" 
                  Width="260" 
                  Height="30"
                  FontSize="15" 
                  Margin="5"/>
          <Button Content="Получить информацию о банкомате" 
                  Click="OnGetInfoClick" 
                  Width="260" 
                  Height="30"
                  FontSize="15" 
                  Margin="5"/>
      </StackPanel>
</Page>
